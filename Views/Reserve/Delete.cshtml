@model ReserveSeek
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Borrar Reserva";
}
<Section class="flex min-h-dvh w-full flex-col items-center">
    <h2 class="w-full bg-gray-900 p-4 text-center text-6xl font-bold text-gray-50">Borrar Reserva</h2>
    <form class="flex h-full w-2/3 flex-col items-center justify-center rounded-md py-4" asp-controller="Reserve" asp-action="Search" method="POST">
        <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
        <input type="hidden" />
        <div class="flex w-2/3 flex-col self-center">
            <label asp-for="Date"></label>
            <input asp-for="Date" type="date" class="border-2 mx-1 rounded-md border-gray-900 p-1" disabled/>
            <span asp-validation-for="Date" class="text-red-600"></span>
        </div>
        <div class="flex w-2/3 flex-col self-center">
            <label asp-for="EndDate"></label>
            <input asp-for="EndDate" type="date" class="border-2 mx-1 rounded-md border-gray-900 p-1" disabled />
            <span asp-validation-for="EndDate" class="text-red-600"></span>
        </div>
        <div class="flex w-2/3 flex-col self-center">
            <label asp-for="Students"></label>
            <input type="number" asp-for="Students" class="border-2 mx-1 rounded-md border-gray-900 p-1" disabled />
            <span asp-validation-for="Students" class="text-red-600"></span>
        </div>
        <div class="flex w-2/3 flex-col self-center">
            <label asp-for="Hour"></label>
            <input asp-for="Hour" type="number" class="border-2 mx-1 rounded-md border-gray-900 p-1" disabled />
            <span asp-validation-for="Hour" class="text-red-600"></span>
        </div>
        <div class="flex w-2/3 flex-col self-center">
            <label asp-for="TotalHours"></label>
            <input type="number" asp-for="TotalHours" class="border-2 mx-1 rounded-md border-gray-900 p-1" disabled />
            <span asp-validation-for="TotalHours" class="text-red-600"></span>
        </div>

        <div class="flex w-2/3 justify-between">
            <button type="submit" class="mt-4 w-48 rounded-md border border-transparent bg-gradient-to-tr from-red-800 to-red-700 px-4 py-2 text-center text-sm text-white shadow-md transition-all hover:shadow-lg hover:bg-red-700 focus:bg-red-700 focus:shadow-none active:bg-slate-700 active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">
                <i class="fa fa-trash" aria-hidden="true"></i>  Ver Disponibilidad
            </button>
            <a asp-action="Index" asp-controller="ClassRoom" class="mt-4 w-48 rounded-md border border-transparent bg-gradient-to-tr from-green-800 to-green-700 px-4 py-2 text-center text-sm text-white shadow-md transition-all hover:shadow-lg hover:bg-slate-700 focus:bg-slate-700 focus:shadow-none active:bg-slate-700 active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">
                Volver
            </a>

        </div>


    </form>
    <h2 class="w-full bg-gray-900 p-4 text-center text-6xl font-bold text-gray-50">Detalles de Reserva</h2>
    <form asp-controller="Reserve" asp-action="Create" class="flex h-full w-2/3 flex-col items-center justify-center rounded-md py-4">
        <table class="w-full min-w-max table-auto text-left">
            <thead>
                <tr>
                    <th class="border-b border-slate-500 bg-slate-800 p-4 transition-colors hover:bg-slate-900">
                        <p class="flex items-center justify-between gap-2 text-sm font-normal leading-none text-slate-50">
                            Numero de Aula
                        </p>
                    </th>

                    <th class="border-b border-slate-500 bg-slate-800 p-4 transition-colors hover:bg-slate-900">
                        <p class="flex items-center justify-between gap-2 text-sm font-normal leading-none text-slate-50">
                            Capacidad

                        </p>
                    </th>
                    <th class="border-b border-slate-500 bg-slate-800 p-4 transition-colors hover:bg-slate-900">
                        <p class="flex items-center justify-between gap-2 text-sm font-normal leading-none text-slate-50">
                            Responsable
                        </p>
                    </th>
                    <th class="border-b border-slate-500 bg-slate-800 p-4 transition-colors hover:bg-slate-900">
                        <p class="flex items-center justify-between gap-2 text-sm font-normal leading-none text-slate-50">
                            Materia
                        </p>
                    </th>

                    <th class="border-b border-slate-500 bg-slate-800 p-4 transition-colors hover:bg-slate-900">
                        <p class="flex items-center justify-between gap-2 text-sm font-normal leading-none text-slate-50">
                            Acciones
                        </p>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr class="hover:bg-slate-50">
                    <form asp-controller="Reserve" asp-action="Create">
                    <td class="border-b border-slate-200 p-4">
                        <p class="block text-sm text-slate-800">
                            7
                        </p>
                    </td>
                    <td class="border-b border-slate-200 p-4">
                        <p class="block text-sm text-slate-800">
                            32
                        </p>
                    </td>
                    <td class="border-b border-slate-200 p-4">
                        <p class="block text-sm text-slate-800">
                            Ariel Bollini
                        </p>
                    </td>
                    <td class="border-b border-slate-200 p-4">
                        <p class="block text-sm font-bold text-green-800">
                            Laboratorio 3
                        </p>
                    </td>

                    <td class="flex justify-end border-b border-slate-200 p-4">
                        <button type="submit" class="ml-2 rounded-md border border-transparent bg-blue-600 px-4 py-2 text-center text-sm text-white shadow-md transition-all hover:shadow-lg hover:bg-blue-700 focus:bg-blue-700 focus:shadow-none active:bg-blue-700 active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                            Reservar
                        </button>
                    </td>
    </form>
    </tr>
    </tbody>
    </table>


    </form>
</Section>