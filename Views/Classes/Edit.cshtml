@model GestionDeAulas.Models.ViewModels.Classes.ClassessCreateVM
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Editar Materia";
}
<Section class="flex min-h-dvh w-full flex-col items-center">
    <h2 class="w-full bg-gray-900 p-4 text-center text-6xl font-bold text-gray-50">Editar Materia</h2>
    <form class="flex h-full w-2/3 flex-col items-center justify-center rounded-md py-4" asp-controller="Classes" asp-action="Edit" method="POST">
<input type="hidden" asp-for="Id"/>
        <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
        <div class="flex w-2/3 flex-col self-center">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="border-2 mx-1 rounded-md border-gray-900 p-1" />
            <span asp-validation-for="Name" class="text-red-600"></span>
        </div>


        <div class="flex w-2/3 flex-col self-center">
            <label asp-for="CourseId"></label>
            <select asp-for="CourseId" class="border-2 mx-1 rounded-md border-gray-900 p-1">
                @{
                    if (Model.CoursesList.Count() > 0)
                    {
                        foreach (var carrera in Model.CoursesList)
                        {
                            
                        <option value="@carrera.Id">@carrera.Name</option>
                        }
                    }
                    else {
                        <option>No hay Carreras cargadas...</option>
                    }
                }
            </select>
            <span asp-validation-for="CourseId" class="text-red-600"></span>
        </div>
        <div class="flex w-2/3 flex-col self-center">
            <label asp-for="UserId"></label>
            <select asp-for="UserId" class="border-2 mx-1 rounded-md border-gray-900 p-1">
                @{
                    if (Model.TeachersList.Count() > 0)
                    {
                        foreach (var docente in Model.TeachersList)
                        {
                        <option value="@docente.Id">@docente.Name</option>    
                        }    
                    }
                    else {
                        <option>No hay docentes cargados...</option>
                    }
                    }
            </select>
            <span asp-validation-for="UserId" class="text-red-600"></span>
        </div>

        <div class="flex w-2/3 flex-col self-center">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="border-2 mx-1 rounded-md border-gray-900 p-1"></textarea>
            <span asp-validation-for="Description" class="text-red-600"></span>
        </div>
        <div class="flex w-2/3 justify-between">
            <button type="submit" class="mt-4 w-40 rounded-md border border-transparent bg-gradient-to-tr from-blue-800 to-blue-700 px-4 py-2 text-center text-sm text-white shadow-md transition-all hover:shadow-lg hover:bg-slate-700 focus:bg-slate-700 focus:shadow-none active:bg-slate-700 active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">
                <i class="fa fa-pencil" aria-hidden="true"></i>  Editar Materia
            </button>
            <a asp-action="Index" asp-controller="Classes" class="mt-4 w-40 rounded-md border border-transparent bg-gradient-to-tr from-green-800 to-green-700 px-4 py-2 text-center text-sm text-white shadow-md transition-all hover:shadow-lg hover:bg-slate-700 focus:bg-slate-700 focus:shadow-none active:bg-slate-700 active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">
                Volver
            </a>

        </div>


    </form>

</Section>