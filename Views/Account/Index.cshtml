@using GestionDeAulas.Models
@model IEnumerable<GestionDeAulas.Models.ViewModels.Account.UserUpdateVM>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Listar Usuarios";
}
<script>
    $(document).ready(function () {
        $('#usersTable').DataTable();
    });
</script>
<Section class="flex min-h-dvh w-full flex-col items-center">
    <h2 class="w-full bg-gray-900 p-4 text-center text-6xl font-bold text-gray-50">Listar Usuarios</h2>
<div class="mt-2 flex w-full justify-end">
    
        <a asp-controller="Account" asp-action="Register" class="rounded-md border border-transparent bg-blue-600 px-4 py-2 text-center text-sm text-white shadow-md transition-all hover:shadow-lg hover:bg-blue-700 focus:bg-blue-700 focus:shadow-none active:bg-blue-700 active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">
        <i class="fa fa-user-plus" aria-hidden="true"></i>
        Registrar Usuario
    </a>
    </div>
    <div class="relative mt-4 flex h-full w-full flex-col overflow-scroll rounded-lg bg-white bg-clip-border shadow-md">
        @if(Model.Count() >  0) 
        {
            <table id="usersTable" class="display w-full min-w-max table-auto text-left">
                <thead>
                    <tr>
                        <th class="border-b border-slate-500 bg-slate-800 p-4 transition-colors hover:bg-slate-900">
                            <p class="flex items-center justify-between gap-2 text-sm font-normal leading-none text-slate-50">
                                @Html.DisplayNameFor(m=>m.FirstName)
                            </p>
                        </th>

                        <th class="border-b border-slate-500 bg-slate-800 p-4 transition-colors hover:bg-slate-900">
                            <p class="flex items-center justify-between gap-2 text-sm font-normal leading-none text-slate-50">
                                @Html.DisplayNameFor(m=>m.Role)

                            </p>
                        </th>
                        <th class="border-b border-slate-500 bg-slate-800 p-4 transition-colors hover:bg-slate-900">
                            <p class="flex items-center justify-between gap-2 text-sm font-normal leading-none text-slate-50">
                                @Html.DisplayNameFor(m=>m.UserName)
                            </p>
                        </th>
                        <th class="border-b border-slate-500 bg-slate-800 p-4 transition-colors hover:bg-slate-900">
                            <p class="flex items-center justify-between gap-2 text-sm font-normal leading-none text-slate-50">
                                @Html.DisplayNameFor(m=>m.IsActive )
                            </p>
                        </th>
                        <th class="border-b border-slate-500 bg-slate-800 p-4 transition-colors hover:bg-slate-900">
                            <p class="flex items-center justify-between gap-2 text-right text-sm font-normal leading-none text-slate-50">
                                Acciones
                            </p>
                        </th>
                    </tr>
                </thead>
                <tbody>


                    @foreach (var user in Model)
                    {
                        <tr class="hover:bg-slate-50">
                            <td class="border-b border-slate-200 p-4">
                                <p class="block text-sm text-slate-800">
                                    @((user.FirstName+" "+user.LastName ).ToUpper())
                                    @* @Html.DisplayFor(m=>user.FirstName.ToUpper() + " "+ user.LastName.ToUpper()) *@
                                </p>

                            </td>
                            <td class="border-b border-slate-200 p-4">
                                <p class="block text-sm text-slate-800">
                                    @(string.Join(", ",user.Role))
                                </p>
                            </td>
                            <td class="border-b border-slate-200 p-4">
                                <p class="block text-sm text-slate-800">
                                    @Html.DisplayFor(m=>user.UserName)
                                </p>
                            </td>
                            <td class="border-b border-slate-200 p-4">
                                <p class="block text-left text-sm font-bold text-green-800">
                                    @(user.IsActive != null ? user.IsActive : "INACTIVO") 
                                </p>
                            </td>
                            <td class="flex justify-end border-b border-slate-200 p-4">
                                <a asp-controller="Account" asp-action="UnDelete"  class="ml-2 rounded-md border border-transparent bg-blue-600 px-4 py-2 text-center text-sm text-white shadow-md transition-all hover:shadow-lg hover:bg-blue-700 focus:bg-blue-700 focus:shadow-none active:bg-blue-700 active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">
                                    <i class="fa fa-info-circle" aria-hidden="true"></i>
                                    Detalle
                                </a>
                                <a asp-controller="Account" asp-action="Delete" asp-route-id="@user.Id" class="ml-2 rounded-md border border-transparent bg-red-600 px-4 py-2 text-center text-sm text-white shadow-md transition-all hover:shadow-lg hover:bg-red-700 focus:bg-red-700 focus:shadow-none active:bg-red-700 active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">
                                    <i class="fa fa-trash" aria-hidden="true"></i>



                                    Borrar</a>
                                <a asp-controller="Account" asp-action="Edit"  asp-route-id="@user.Id" class="ml-2 rounded-md border border-transparent bg-green-600 px-4 py-2 text-center text-sm text-white shadow-md transition-all hover:shadow-lg hover:bg-green-700 focus:bg-green-700 focus:shadow-none active:bg-green-700 active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                    Editar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }else {<div>No hay contenido</div>}
    </div>

</Section>

