@model Credentials
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Login de Usuario";
}
<Section class="flex min-h-dvh w-full flex-col items-center">
    <h2 class="w-full bg-gray-900 p-4 text-center text-6xl font-bold text-gray-50">Ingreso al sistema</h2>
    <form class="flex h-full w-2/3 flex-col items-center justify-center rounded-md py-4" asp-controller="Account" asp-action="Login" method="POST">
        <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
        <div class="flex w-2/3 flex-col self-center">
            <label asp-for="UserNama"></label>
            <input asp-for="UserNama" class="border-2 mx-1 rounded-md border-gray-900 p-1" />
            <span asp-validation-for="UserNama" class="text-red-600"></span>
        </div>
        <div class="flex w-2/3 flex-col self-center">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="border-2 mx-1 rounded-md border-gray-900 p-1" />
            <span asp-validation-for="Password" class="text-red-600"></span>
        </div> 
        <div class="mt-2 flex w-2/3 justify-between">
        <div class="flex place-items-center align-middle">
            <label asp-for="Persist"></label>
        <input type="checkbox" asp-for="Persist" class="peer mx-2 h-5 w-5 cursor-pointer appearance-none rounded border border-slate-300 py-1 shadow transition-all checked:bg-slate-800 checked:border-slate-800 hover:shadow-md"  />
            </div>
            <button type="submit" class="ml-2 rounded-md border border-transparent bg-blue-600 px-4 py-2 text-center text-sm text-white shadow-md transition-all hover:shadow-lg hover:bg-blue-700 focus:bg-blue-700 focus:shadow-none active:bg-blue-700 active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">
                <i class="fa fa-sign-in" aria-hidden="true"></i>

                Ingresar
            </button>
        </div>
        
    </form>
</Section>