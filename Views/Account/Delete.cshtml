@model GestionDeAulas.Models.ViewModels.Account.UserUpdateVM
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Editar Usuario";
}
<Section class="flex min-h-dvh w-full flex-col items-center">
    <h2 class="w-full bg-gray-900 p-4 text-center text-6xl font-bold text-gray-50">Eliminar Usuario</h2>
    <form class="flex h-full w-2/3 flex-col items-center justify-center rounded-md py-4" asp-controller="Account" asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
        <div class="flex w-2/3 flex-col self-center">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" disabled class="border-2 mx-1 rounded-md border-gray-900 p-1" />
            <span asp-validation-for="FirstName" class="text-red-600"></span>
        </div>
        <div class="flex w-2/3 flex-col self-center">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" disabled class="border-2 mx-1 rounded-md border-gray-900 p-1" />
            <span asp-validation-for="LastName" class="text-red-600"></span>
        </div>
        <div class="flex w-2/3 flex-col self-center">
            <label asp-for="Dni"></label>
            <input asp-for="Dni" disabled class="border-2 mx-1 rounded-md border-gray-900 p-1" />
            <span asp-validation-for="Dni" class="text-red-600"></span>
        </div>
        <div class="flex w-2/3 flex-col self-center">
            <label asp-for="EmployeeCode"></label>
            <input disabled asp-for="EmployeeCode" class="border-2 mx-1 rounded-md border-gray-900 p-1" />
            <span asp-validation-for="EmployeeCode" class="text-red-600"></span>
        </div>
        <div class="flex w-2/3 flex-col self-center">
            <label asp-for="UserName"></label>
            <input disabled asp-for="UserName" class="border-2 mx-1 rounded-md border-gray-900 p-1" />
            <span asp-validation-for="UserName" class="text-red-600"></span>
        </div>
        <div class="flex w-2/3 flex-col self-center">
            <label asp-for="PhoneNumber"></label>
            <input disabled asp-for="PhoneNumber" class="border-2 mx-1 rounded-md border-gray-900 p-1" />
            <span asp-validation-for="PhoneNumber" class="text-red-600"></span>
        </div>
        <div class="flex w-2/3 flex-col self-center">
            <label asp-for="Role">Rol</label>
            <select asp-for="Role" disabled class="border-2 mx-1 rounded-md border-gray-900 p-1">
                <option value="ADMINISTRADOR">Administrador</option>
                <option value="DOCENTE">Docente</option>
                <option value="ALUMNO">Alumno</option>
            </select>
        </div>
        <div class="flex w-2/3 items-start justify-start self-center align-top">
            <div class="flex w-1/2 flex-col items-start pe-1">
                <label asp-for="Password"></label>
                <input disabled asp-for="Password" class="border-2 w-full rounded-md border-gray-900" />
                <span asp-validation-for="Password" class="text-red-600"></span>
            </div>
            <div class="ps- flex w-1/2 flex-col items-start">
                <label asp-for="Password2"></label>
                <input disabled asp-for="Password2" class="border-2 w-full rounded-md border-gray-900" />
                <span asp-validation-for="Password2" class="text-red-600"></span>
            </div>
        </div>
        <div class="flex w-2/3 justify-between">
            <button type="submit" class="mt-4 w-40 rounded-md border border-transparent bg-gradient-to-tr from-red-800 to-red-700 px-4 py-2 text-center text-sm text-white shadow-md transition-all hover:shadow-lg hover:bg-rose-700 focus:bg-rose-700 focus:shadow-none active:bg-rose-700 active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">
                <i class="fa fa-trash" aria-hidden="true"></i>  Eliminar Usuario
            </button>
            <a asp-action="Index" asp-controller="Home" class="mt-4 w-40 rounded-md border border-transparent bg-gradient-to-tr from-green-800 to-green-700 px-4 py-2 text-center text-sm text-white shadow-md transition-all hover:shadow-lg hover:bg-slate-700 focus:bg-slate-700 focus:shadow-none active:bg-slate-700 active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">
                Volver
            </a>

        </div>


    </form>

</Section>