@model IEnumerable<GestionDeAulas.Models.Course>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Listar Carreras";
}
<script>
    $(document).ready(function () {
        $('#coursesTable').DataTable();
    });
</script>

<Section class="flex min-h-dvh w-full flex-col items-center">
    <h2 class="w-full bg-gray-900 p-4 text-center text-6xl font-bold text-gray-50">Listado de Carreras</h2>
    <div class="mt-2 flex w-full justify-end">
    
        <a asp-controller="Courses" asp-action="Create" class="ml-2 mt-4 self-end rounded-md border border-transparent bg-blue-600 px-4 py-2 text-center text-sm text-white shadow-md transition-all hover:shadow-lg hover:bg-blue-700 focus:bg-blue-700 focus:shadow-none active:bg-blue-700 active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">
            <i class="fa fa-user-plus" aria-hidden="true"></i>
            Crear Carrera
        </a>
    </div>
    <div class="relative mt-4 flex h-full w-full flex-col overflow-scroll rounded-lg bg-white bg-clip-border shadow-md">

        <table id="coursesTable" class="display w-full min-w-max table-auto text-left">
            <thead>
                <tr>
                    <th class="w-1/3 border-b border-slate-500 bg-slate-800 p-4 transition-colors hover:bg-slate-900">
                        <p class="flex items-center justify-between gap-2 text-sm font-normal leading-none text-slate-50">
                            Carrera
                        </p>
                    </th>

                    <th class="border-b border-slate-500 bg-slate-800 p-4 transition-colors hover:bg-slate-900">
                        <p class="flex items-center justify-between gap-2 text-sm font-normal leading-none text-slate-50">
                            Institucion

                        </p>
                    </th>
                    <th class="border-b border-slate-500 bg-slate-800 p-4 transition-colors hover:bg-slate-900">
                        <p class="flex items-center justify-between gap-2 text-sm font-normal leading-none text-slate-50">
                            Año de Inicio
                        </p>
                    </th>
                    <th class="border-b border-slate-500 bg-slate-800 p-4 transition-colors hover:bg-slate-900">
                        <p class="flex items-center justify-between gap-2 text-sm font-normal leading-none text-slate-50">
                            Estado
                        </p>
                    </th>
                    <th class="border-b border-slate-500 bg-slate-800 p-4 transition-colors hover:bg-slate-900">
                        <p class="flex items-center justify-between gap-2 text-sm font-normal leading-none text-slate-50">
                            Acciones
                        </p>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model.Count() > 0)
                    {
                        foreach (var carrera in Model){
                        <tr class="hover:bg-slate-50">
                            <td class="border-b border-slate-200 p-4">
                                <p class="block text-sm text-slate-800">
                                    @carrera.Name
                                </p>
                            </td>
                            <td class="border-b border-slate-200 p-4">
                                <p class="block text-sm text-slate-800">
                                    @carrera.Institution.Name
                                </p>
                            </td>
                            <td class="border-b border-slate-200 p-4">
                                <p class="block text-sm text-slate-800">
                                    @carrera.StartingYear
                                </p>
                            </td>
                            <td class="border-b border-slate-200 p-4">
                                <p class="block text-sm font-bold text-green-800">
                                    @(carrera.IsActive == true ? "Activo" : "Inactivo")
                                </p>
                            </td>
                            <td class="flex justify-end border-b border-slate-200 p-4">
                                <a asp-controller="Courses" asp-action="UnDelete" asp-route-id="@carrera.Id" class="ml-2 rounded-md border border-transparent bg-blue-600 px-4 py-2 text-center text-sm text-white shadow-md transition-all hover:shadow-lg hover:bg-blue-700 focus:bg-blue-700 focus:shadow-none active:bg-blue-700 active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">
                                    <i class="fa fa-check" aria-hidden="true"></i>
                                    Activar
                                </a>
                                <a asp-controller="Courses" asp-action="Delete" asp-route-id="@carrera.Id" class="ml-2 rounded-md border border-transparent bg-red-600 px-4 py-2 text-center text-sm text-white shadow-md transition-all hover:shadow-lg hover:bg-red-700 focus:bg-red-700 focus:shadow-none active:bg-red-700 active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                    Borrar
                                </a>
                                <a asp-controller="Courses" asp-action="Edit" asp-route-id="@carrera.Id" class="ml-2 rounded-md border border-transparent bg-green-600 px-4 py-2 text-center text-sm text-white shadow-md transition-all hover:shadow-lg hover:bg-green-700 focus:bg-green-700 focus:shadow-none active:bg-green-700 active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                    Editar
                                </a>
                            </td>
                        </tr>
                        }
                    }
                    else
                    {
                        <span class="w-full text-center font-bold text-red-600">No hay Carreras cargadas...</span>
                    }
                }
            </tbody>
        </table>
    </div>

</Section>

